<div class="chat-wrapper">
    <div class="chat-window" id="chat_window_1">
        <div class="chat-inner">
            <div class="panel panel-default">
                <div class="panel-heading top-bar">
                    <div class="panel-inner">
                        <h5 class="panel-title"><span class="glyphicon glyphicon-comment"></span>Live Chat Support</h5>
                    </div>

                </div>
                <div class="panel-body msg_container_base" id="messagesList">
                    <input id="userInput" type="text" class="form-control" placeholder="Write your name here." style="margin-top:5px" />
                </div>
                <div class="panel-footer">

                    @*<input id="userEmail" type="text" class="form-control" placeholder="Write your email here..." />*@
                    <div class="input-group">
                        <input id="messageInput" type="text" class="form-control input-sm chat_input" placeholder="Write your message here..." />
                        <span class="input-group-btn">
                            <button class="btn btn-primary btn-sm" id="sendButton">Send</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/chat.js"></script>